<h1>Edit your Comment</h1>
<%= form_with(model: [ @detail, @detail.comments.build ]) do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%=  form.submit %>
  </p>
<% end %>